---
export interface Props {
  title?: string;
  subtitle?: string;
  containerId?: string;
}

const { 
  title = "Loading...", 
  subtitle = "Please wait while we process your data...",
  containerId = "loading-overlay" 
} = Astro.props;
---

<div id={containerId} class="max-w-4xl mx-auto px-4">
  <div class="bg-white rounded-lg border border-gray-200 shadow-sm p-12">
    <div class="flex flex-col items-center justify-center space-y-6">
      <!-- Animated spinner -->
      <div class="relative">
        <div class="w-16 h-16 border-4 border-blue-200 rounded-full animate-spin border-t-blue-600"></div>
      </div>
      <!-- Loading text -->
      <div class="text-center">
        <h3 class="text-xl font-semibold text-gray-800 mb-2">{title}</h3>
        <p class="text-gray-600">{subtitle}</p>
      </div>
      <!-- Animated dots -->
      <div class="flex space-x-1">
        <div class="w-2 h-2 bg-blue-500 rounded-full animate-bounce" style="animation-delay: 0ms;"></div>
        <div class="w-2 h-2 bg-blue-500 rounded-full animate-bounce" style="animation-delay: 150ms;"></div>
        <div class="w-2 h-2 bg-blue-500 rounded-full animate-bounce" style="animation-delay: 300ms;"></div>
      </div>
    </div>
  </div>
</div> 